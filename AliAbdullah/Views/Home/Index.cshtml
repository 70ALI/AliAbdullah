@{
    ViewData["Title"] = "Home";
}

<section class="bg-primary text-white text-center py-5 mb-4 rounded-4">
    <div class="container">
        <h1 class="display-5 fw-bold mb-2">Welcome</h1>
        <p class="lead mb-4">Manage service providers and products with ease.</p>
        <div class="d-flex flex-wrap gap-2 justify-content-center">
            <a class="btn btn-light btn-lg" asp-controller="ServiceProviders" asp-action="Index">Service Providers</a>
            <a class="btn btn-outline-light btn-lg" asp-controller="Products" asp-action="Index">Products</a>
            <a class="btn btn-outline-light btn-lg" asp-controller="Products" asp-action="ProductFilter">Product Filter</a>
        </div>
    </div>
</section>

<div class="container">
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Service Providers</h5>
                    <p class="text-muted mb-3">Create and manage providers.</p>
                    <div class="d-flex gap-2">
                        <a class="btn btn-primary" asp-controller="ServiceProviders" asp-action="Index">Browse</a>
                        <a class="btn btn-outline-primary" asp-controller="ServiceProviders" asp-action="Create">New</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <p class="text-muted mb-3">Add and edit products.</p>
                    <div class="d-flex gap-2">
                        <a class="btn btn-primary" asp-controller="Products" asp-action="Index">Browse</a>
                        <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Create">New</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Quick Filter</h5>
                    <p class="text-muted mb-3">Find products by price, date, and provider.</p>
                    <a class="btn btn-primary" asp-controller="Products" asp-action="ProductFilter">Open Filter</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted">Providers</div>
                    <div class="fs-3 fw-bold">@((ViewBag.Providers ?? 0).ToString())</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted">Products</div>
                    <div class="fs-3 fw-bold">@((ViewBag.Products ?? 0).ToString())</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted">Last Added</div>
                    <div class="fs-3 fw-bold">@(ViewBag.LastDate is DateTime d ? d.ToString("yyyy-MM-dd") : "-")</div>
                </div>
            </div>
        </div>
    </div>
</div>